import { OpHook, RouteParams, SkipAsset, SkipChain, SkipRouteResponse } from '../types';
/**
 * Query the available chains
 */
export declare function getChains(): Promise<SkipChain[]>;
/**
 * Query the available assets for a given chain
 * @param chainID The chain-id of the chain you want to get the assets
 */
export declare function getAssets(chainId?: string, showHidden?: boolean): Promise<SkipAsset[]>;
export interface SkipOptions {
    ignoreWrap?: boolean;
    ignoreUnwrap?: boolean;
    signedHook?: OpHook;
    originalSkipMessage?: SkipRouteResponse;
}
/**
 * Get messages to create a transfer transaction on the requested route
 * @param rawRoute
 */
export declare function getMessageDirect(rawRoute: RouteParams, options?: SkipOptions): Promise<SkipRouteResponse>;
