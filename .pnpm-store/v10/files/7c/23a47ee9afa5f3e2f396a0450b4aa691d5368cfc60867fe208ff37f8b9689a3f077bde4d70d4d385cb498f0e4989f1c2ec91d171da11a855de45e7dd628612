import { BehaviorSubject } from 'rxjs';
import { Chain } from '@initia/initia-registry-types';
import { TxBodyValue } from '@initia/utils';
import { Coin } from '@cosmjs/amino';
import { SkipChain } from '../lib/bridge-sdk';
export declare const opened$: BehaviorSubject<Opened | null>;
export declare const isLoading$: BehaviorSubject<boolean>;
export declare const isBridgeOpened$: BehaviorSubject<boolean>;
export declare const isBridgeComponent$: BehaviorSubject<boolean>;
type Opened = {
    component: "WalletList";
} | {
    component: "BridgeWalletList";
    name: "srcAddress" | "dstAddress";
    chain: SkipChain;
} | {
    component: "ConnectedWallet";
    style: string;
} | {
    component: "RequestTx";
    requested: Requested;
};
interface Requested {
    layer: Chain;
    txBodyValue: TxBodyValue;
    gas: number;
    gasAdjustment: number;
    fee?: Coin;
    mode?: "sync" | "block";
    skipPollingTx: boolean;
    resolve: (value: string) => void;
    reject: (error: Error) => void;
}
export {};
