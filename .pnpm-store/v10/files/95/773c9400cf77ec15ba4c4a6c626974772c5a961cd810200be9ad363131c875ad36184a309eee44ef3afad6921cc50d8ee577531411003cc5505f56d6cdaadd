import { Coin, StdFee } from '@cosmjs/amino';
import { GasPrice } from '@cosmjs/stargate';
import { Chain } from '@initia/initia-registry-types';
export declare function getGasPrice(feeDenom: string, layer: Chain, gasPrices?: Record<string, string>): GasPrice | null;
export declare function findInitialFeeDenom(layer: Chain, balances: readonly Coin[] | undefined, localStorageKey: string): string;
interface Params {
    layer: Chain;
    feeDenom: string;
    feeAmount?: string;
    balances?: readonly Coin[];
    gas: number;
    gasAdjustment: number;
    gasPrices?: {
        [denom: string]: string;
    };
    storageKey: string;
}
export declare function getFeeInfo(params: Params): {
    stdFee: StdFee;
    fee: {
        amount: string;
        denom: string;
    };
    hasSufficientBalance: boolean | undefined;
    insufficientBalanceWarning: string | undefined;
    onApprove: () => void;
};
export {};
