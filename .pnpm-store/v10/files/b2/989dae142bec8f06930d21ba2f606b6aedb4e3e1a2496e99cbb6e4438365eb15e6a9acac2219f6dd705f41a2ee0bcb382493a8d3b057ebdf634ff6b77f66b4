import { Coin } from '@cosmjs/amino';
import { Asset } from '@initia/initia-registry-types';
import { DenomTrackerBaseParams, DenomTrackerParams } from './denom';
export interface InitiaTokenInfo {
    denom: string;
    metadata: string;
    address?: string;
    decimals: number;
    symbol: string;
    name?: string;
    description?: string;
    image?: string;
    coingeckoId?: string;
    price?: number;
}
export interface InitiaAssetInfo extends InitiaTokenInfo {
    balance: string;
    value?: number;
}
export declare function toInitiaTokenInfo(asset: Asset): InitiaTokenInfo;
export declare function fetchTokenInfo(denom: string, params: DenomTrackerParams): Promise<InitiaTokenInfo>;
interface SortConfig extends DenomTrackerBaseParams {
    prices?: {
        [denom: string]: number;
    };
}
export declare function sortBalances(balances: Coin[], { layer, assets, layer1, prices }: SortConfig): Coin[];
export {};
