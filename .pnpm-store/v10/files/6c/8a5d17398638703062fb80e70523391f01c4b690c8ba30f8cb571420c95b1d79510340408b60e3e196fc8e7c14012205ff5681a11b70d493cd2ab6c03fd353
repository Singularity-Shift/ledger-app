import { SkipChain } from '../types';
/**
 * Checks if the given address is valid on the current chain
 * @param address The address that needs to be validated
 * @param chain  The chain where we want to ensure the address is valid
 */
export declare function isAddressValid(address: string, chain: SkipChain): boolean;
/**
 * Converts a given Initia address to its bech32 version
 * @param address The address that needs to be converted
 * @param chainId The chain of the address
 */
export declare function parseInitiaAddress(address: string, chainId: string): string;
